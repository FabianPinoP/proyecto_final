<div class="row my-5">
  <div class="col-md-8 offset-2">
    <div class="container my-5">
    <h1 class="text-center my-5">Published parking lots</h1>
    <div class="container"> 
    </div>

      <div class="row">
        <% @parkings.each do |parking| %>
          <div class="col-md-4 ">
            <div class="card shadow-lg p-3 mb-5 bg-body rounded ">
              <%= image_tag parking.image.variant(resize: "200x200" ), :class => 'card-img-top' %>
              <div class="card-body">
                <h5 class="card-title"> Size: <%= parking.size %></h5>
                <div class="badge badge-primary"></div>
                <p class="card-text"><%= parking.description %></p>
                <hr>
                <p class="card-text"><%= parking.address %></p>
                <hr>
                <p class="card-text" >Price: $<%= parking.price %></p>
                <hr>
              <% if current_user %>
                <%= link_to 'Edit', edit_parking_path(parking) %>
                <%= link_to 'Destroy', parking, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
              <div class="row float-right">
                <div class="col-md-12">
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>