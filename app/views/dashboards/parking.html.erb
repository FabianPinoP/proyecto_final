<h1>Parkings</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Description</th>
      <th>City</th>
      <th>Price</th>
      <th>Size</th>
      <th>Town</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parkings.each do |parking| %>
      <tr>
        <td><%= parking.address %></td>
        <td><%= parking.description %></td>
        <td><%= parking.city %></td>
        <td><%= parking.price %></td>
        <td><%= parking.size %></td>
        <td><%= parking.town %></td>
        <td><%= link_to 'Show', parking %></td>
        <td><%= link_to 'Edit', edit_parking_path(parking) %></td>
        <td><%= link_to 'Destroy', parking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>