
<div class="container" id="table-user"  >
  <h1 class=" my-3" >Dashboard</h1>
  <td><%= button_to "Parkings", public_parkings_path, class: " btn btn-primary my-3", method: :get %>
  <table class="container table table-bordered" >
    <thead>
      <tr class="text-center table-primary"  >
        <th>Users</th>
        <th>Email</th>
        <th>Admin</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.admin %></td>


          <% if user.admin? %>
            <td class="text-center"><%= link_to update_status_path(user.id) do%>
              <i class="fas fa-toggle-on fa-2x icon-on"></i>
            <% end %></td>
          <% else %>
            <td class="text-center"><%= link_to  update_status_path(user.id) do%>
              <i class="fas fa-toggle-off fa-2x icon-off"></i>
            <% end %></td>
          <% end %>

          <td><%= link_to destroy_user_path(user.id), data: { confirm: "Are you sure?" }, method: :delete do %>
          <i class="fas fa-minus-circle fa-2x icon-trash"></i>

          <% end %>
          </td>


        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>
