<%= link_to like_parking_path(parking), method: :patch, remote: true, id: "like-link-#{parking.id}" do %>
  <% if current_user.voted_up_on?(parking) %>
    UP voted
    <b>
      <%= parking.cached_votes_score %>
    </b>
    DOWN vote
  <% elsif current_user.voted_down_on?(parking) %>
    UP vote
    <b>
      <%= parking.cached_votes_score %>
    </b>
    DOWN voted
  <% else %>
    UP
    <b>
      <%= parking.cached_votes_score %>
    </b>
    DOWN
  <% end %>
<% end %>