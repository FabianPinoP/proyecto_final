<div class="card">
  <div class="card-header bg-dark text-light">
    <i class="fa fa-shopping-cart" aria-hidden="true"></i>
    <a href="<%= parkings_url%>" class="btn btn-outline-info btn-sm pull-right">Continue Shopping</a>
    <div class="clearfix"></div>
  </div>
  <div class="card-body">
    <% @order.order_items.includes(:parking).each do |item| %>
    
      <div class="row">
        <div class="col-xs-2 col-md-2">
          <%= image_tag item.parking.image.variant(resize: "200x200" ), :class => 'card-img-top' %>
        </div>
        <div class="col-xs-4 col-md-6">
          <h4 class="product-name"><strong><%= item.parking.address %></strong></h4>
          <h4><small><%= item.parking.description %></small></h4>
        </div>
        <div class="col-xs-6 col-md-4 row">
          <div class="col-xs-6 col-md-6 text-right" style="padding-top: 5px">
            <h6><span class="text-muted">$</span></strong><strong><%= item.price%> </h6>
            <%= link_to 'Delete item', delete_item_cart_path(item.id)    %>

          </div>
          <div class="col-xs-4 col-md-4">
          </div>
          <div class="col-xs-2 col-md-2">
          </div>
        </div>
      </div>
      <hr>
     <% end %>
  </div>
  <div class="card-footer">
  <%= link_to 'pay', mercado_pago_path(@order.id), class:"btn btn-success pull-right" %>
  Total: $<b><%= @order.total %></b>
  </div>
